@model TeamRoles.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>ApplicationUser</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProfilePic)
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.ProfilePic)" width="100" height="100" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dd>
        <table class="table">
            <tr>
                <th>Course Title</th>
                <th>Teacher</th>
                <th>Grade</th>
            </tr>
            @foreach (var item in Model.Enrollments)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.TeacherName)
                </td>
                <td>
                    @if (item.Grade == -1)
                    {
                        <p>Not Set</p>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Grade)
                    }
                </td>
            </tr>
            }
        </table>
        </dd>
    </dl>


</div>
<p>
    @Html.ActionLink("Courses", "Index", "Courses")|
    @Html.ActionLink("Home", "Index", "Home")
</p>
