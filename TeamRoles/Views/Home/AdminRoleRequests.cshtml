@using Microsoft.AspNet.Identity;
@using TeamRoles.Models.Extensions;
@using TeamRoles.Models;
@model IEnumerable<TeamRoles.Models.RequestViewModel>

<div class="container">
    <div class="row">
        <div class="col-md-12 padding-top-10 text-center">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>From</th>
                    <th>For Role</th>
                    <th>Options</th>
                </tr>
                </thead>

                <tbody>
                @if (Model.Count() != 0)
                {
                    foreach (var req in Model)
                    {

                        <tr class="table-active">
                            <td>@req.ReqId</td>
                            <td>@req.User1.UserName</td>
                            <td>@req.Role</td>
                            <td>
                                <a href="@Url.Action("AcceptRequest", "Home", new {id = req.ReqId})"><i class="fas fa-check fa-2x green"></i></a>
                                <a href="@Url.Action("DeclineRequest", "Home", new {id = req.ReqId})"><i class="fas fa-ban fa-2x red"></i></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="table-danger">
                        <td></td>
                        <td>You have no Request!</td>
                        <td></td>
                        <td></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>


