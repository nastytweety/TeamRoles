@model IEnumerable<TeamRoles.Models.Enrollment>

<div class="container">
    <div class="row text-center padding-top-20">
        <div class="col-md-12">

            <h4 class="text-center align-content-center"> @Html.DisplayFor(model => model.FirstOrDefault().Course.CourseName) </h4>

            <table class="table">
                <tr>
                    <th>Student</th>
                    <th>Teacher</th>
                    <th>Grade</th>
                    <td>Absences</td>
                </tr>

                @if (Model.Count() != 0)
                {

                    foreach (var item in Model)
                    {
                        <tr class="table-active">
                            <td>@item.User.UserName</td>
                            <td>@item.Course.Teacher.UserName</td>

                            <td>
                                @if (item.Grade == -1)
                                {
                                    <p>Not Set</p>
                                }
                                else
                                {
                                    @item.Grade
                                }
                            </td>
                            <td>@item.Absences</td>
                        </tr>
                    }

                 }
                 else
                 {
                     <tr class="table-danger">
                         <td></td>
                         <td>There are no grades for this course!</td>
                         <td></td>
                         <td></td>
                     </tr>
                 }
            </table>
        </div>
    </div>
</div>
    



    